<p id="notice"><%= notice %></p>
<h1>Kehinde</h1>

<% if user_signed_in? %>
  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
  <p>Welcome, <%= current_user.email %></p>
<% else %>
  <%= link_to "Log in", user_session_path, method: :post %>
  <p>Welcome, people from another dimension</p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Post</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.author %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
