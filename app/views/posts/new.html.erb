<h1> Create your post </h1>

<%= form_with(model: @post, url: posts_path, method: :post) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>
  
    <div class="field">
      <%= form.label :author %>
      <%= form.text_field :author %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>
